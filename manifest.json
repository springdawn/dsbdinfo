{
    "name":"dsbdinfo",
    "version":"0.1.3",
    "manifest_version":2,

    "description":"ポスト数を表示",

    "permissions":[
        "http://api.tumblr.com/v2/blog/*",
        "storage"
    ],

    "options_page":"html/options.html",

    "background":{
        "page":"html/background.html"
    },

    "content_scripts":[
        {
            "matches":["http://www.tumblr.com/dashboard*"],
            "js":["js/jquery-1.8.2.min.js","js/info.js"],
            "css":["css/popup.css"]
        }
    ]
}
