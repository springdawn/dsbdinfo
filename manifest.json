{
    "name":"dsbdinfo",
    "version":"0.2.7",
    "manifest_version":2,

    "description":"dashboardで色々",
    "icons":{"128":"dsbdinfo_icon.png"},
    "update_url": "https://dl.dropboxusercontent.com/u/24600276/dsbdinfo/update.xml",

    "permissions":[
        "http://api.tumblr.com/v2/blog/*",
        "storage"
    ],

    "options_page":"html/options.html",

    "background":{
        "persistent":false,
        "scripts":["js/background.js"]
    },

    "content_scripts":[
        {
            "matches":["http://www.tumblr.com/dashboard*"],
            "js":["js/jquery-2.0.0.min.js","js/jquery-ui-1.10.1.custom.min.js","js/jquery.ba-throttle-debounce.min.js","js/image.js","js/info.js","js/date-utils.min.js","js/box.js"],
            "css":["css/info.css"],
            "run_at":"document_end"
        }
    ]
}
