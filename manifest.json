{
    "name":"dsbdinfo",
    "version":"0.1.10",
    "manifest_version":2,

    "description":"ポスト数を表示",

    "permissions":[
        "http://api.tumblr.com/v2/blog/*",
        "storage"
    ],

    "options_page":"html/options.html",

    "background":{
        "persistent":false,
        "scripts":["js/background.js"]
    },

    "content_scripts":[
        {
            "matches":["http://www.tumblr.com/dashboard*"],
            "js":["js/jquery-1.9.1.min.js","js/jquery-ui-1.10.1.custom.min.js","js/info.js","js/date-utils.min.js","js/box.js"],
            "css":["css/info.css"],
            "run_at":"document_end"
        }
    ]
}
